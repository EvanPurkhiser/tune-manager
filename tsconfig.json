{
  "compilerOptions": {
    "experimentalDecorators": true,
    "alwaysStrict": false,
    "noImplicitAny": false,
    "target": "ES2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["dom", "ESNext"],
    "allowJs": false,
    "jsx": "react-jsxdev",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "app/*": ["app/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["./app"]
}
